<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dim10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvInspiredImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dim10dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivGetInsImage"
            android:layout_width="@dimen/dim70dp"
            android:layout_height="@dimen/dim70dp"
            android:src="@drawable/dummy_get_inspired" />
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvGetInsHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dim10dp"
        android:layout_toEndOf="@+id/cvInspiredImage"
        android:fontFamily="@font/rubik"
        android:lineSpacingExtra="@dimen/dim2dp"
        android:layout_toStartOf="@+id/ivInspiredHeart"
        android:text="7 Nutrition Tips to Lose \nWeight Faster"
        android:textColor="@color/black"
        android:textSize="@dimen/dim14sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvInspiredType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvGetInsHeading"
        android:layout_marginStart="@dimen/dim10dp"
        android:layout_marginTop="@dimen/dim5dp"
        android:layout_toEndOf="@+id/cvInspiredImage"
        android:fontFamily="@font/rubik"
        android:layout_toStartOf="@+id/ivInspiredHeart"
        android:lineSpacingExtra="@dimen/dim2dp"
        android:text="Nutrition"
        android:textSize="@dimen/dim10sp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivInspiredHeart"
        android:layout_width="@dimen/dim15dp"
        android:layout_height="@dimen/dim15dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dim10dp"
        android:src="@drawable/shape_heart" />
</RelativeLayout>