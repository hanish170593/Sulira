<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/dim10dp"
    app:cardCornerRadius="@dimen/dim10dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivCollectionImage"
            android:layout_width="180dp"
            android:layout_height="240dp"
            android:scaleType="fitXY"
            android:src="@drawable/dummy_collection_back" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCollectionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/rubik"
                android:text="HEALTH"
                android:textColor="@color/white"
                android:textSize="@dimen/dim12sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCollText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCollectionTitle"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dim10dp"
                android:fontFamily="@font/rubik_medium"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/dim2dp"
                android:text="How to Be a \nBetter Runner"
                android:textColor="@color/white"
                android:textSize="@dimen/dim16sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnArticles"
                android:layout_width="@dimen/dim80dp"
                android:layout_height="@dimen/dim35dp"
                android:layout_below="@+id/tvCollText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dim40dp"
                android:background="@drawable/rect_white_fill_back"
                android:fontFamily="@font/rubik"
                android:text="8 articles"
                android:textColor="@color/app_color"
                android:textSize="8sp" />

        </RelativeLayout>
    </FrameLayout>
</androidx.cardview.widget.CardView>