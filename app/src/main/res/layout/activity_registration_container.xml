<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.RegistrationContainerActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBackRegistration"
            android:layout_width="@dimen/dim25dp"
            android:layout_height="@dimen/dim25dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dim10dp"
            android:src="@drawable/back_icon"
            android:tint="@color/black" />

        <com.google.android.material.slider.Slider
            android:id="@+id/slRegistrationProgress"
            android:layout_width="@dimen/dim100dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:value="1.0"
            android:valueFrom="0.0"
            android:valueTo="13.0"
            android:longClickable="false"
            app:thumbColor="@android:color/transparent"
            android:clickable="false"
            app:trackHeight="10dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSkipOrNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dim10dp"
            android:fontFamily="@font/rubik_medium"
            android:text="@string/next"
            android:textColor="@color/app_color"
            android:textSize="@dimen/dim16sp"
            tools:ignore="RelativeOverlap" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_registration_cont"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</androidx.appcompat.widget.LinearLayoutCompat>