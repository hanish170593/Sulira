<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/step1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dim20dp"
        android:fontFamily="@font/rubik"
        android:text="Step 9/13"
        android:textColor="@color/app_color" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/letsStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/step1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dim10dp"
        android:gravity="center"
        android:text="@string/time_to_customize_your_interest"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/rubik_medium" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvInterests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/letsStart"
        android:layout_marginStart="@dimen/dim20dp"
        android:layout_marginTop="@dimen/dim20dp"
        android:layout_marginEnd="@dimen/dim20dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btCustomizeInterest"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rvInterests"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/rubik"
        android:layout_marginTop="@dimen/dim40dp"
        android:background="@drawable/rect_fill_back"
        android:text="@string/conitnue"
        android:textColor="@color/white" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btCustomizeInterest"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dim20dp"
        android:fontFamily="@font/rubik"
        android:text="@string/you_might_change_it_later"
        android:textColor="@color/app_color" />
</RelativeLayout>   