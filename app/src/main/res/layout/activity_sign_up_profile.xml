<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/step1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dim50dp"
        android:fontFamily="@font/rubik"
        android:text="Step 13/13"
        android:textColor="@color/app_color" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/letsStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/step1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dim10dp"
        android:fontFamily="@font/rubik_medium"
        android:gravity="center"
        android:text="@string/profile_picture"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <com.yarolegovich.discretescrollview.DiscreteScrollView
        android:id="@+id/genderSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/letsStart"
        android:layout_marginTop="@dimen/dim20dp"
        app:dsv_orientation="horizontal" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvProText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/genderSelection"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dim20dp"
        android:fontFamily="@font/rubik"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/dim3dp"
        android:src="@drawable/notification_details"
        android:text="@string/how_custom_profile_picture"
        android:textColor="@color/light_blue_black" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSelectProfileImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvProText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dim40dp"
        android:fontFamily="@font/rubik"
        android:text="@string/add_custom_photo"
        android:textColor="@color/light_blue_black" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivProfilePic"
        android:layout_width="@dimen/dim80dp"
        android:layout_height="@dimen/dim80dp"
        android:layout_below="@+id/tvSelectProfileImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dim20dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btProfilePicContinue"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivProfilePic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dim30dp"
        android:background="@drawable/rect_fill_back"
        android:fontFamily="@font/rubik"
        android:text="@string/conitnue"
        android:textColor="@color/white" />
</RelativeLayout>