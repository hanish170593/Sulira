<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/dim10dp"
    app:cardCornerRadius="@dimen/dim20dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dim20dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivRecoImage"
            android:layout_width="250dp"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            android:src="@drawable/explore_dummy_imge" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvRecoTitle"
            android:layout_width="@dimen/dim200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivRecoImage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dim15dp"
            android:lineSpacingExtra="2dp"
            android:fontFamily="@font/rubik"
            android:text="@string/_20_minutes_outdoor_can_make_you_less_stress"
            android:textColor="@color/black"
            android:textSize="@dimen/dim14sp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivRecoAvatar"
            android:layout_width="@dimen/dim20dp"
            android:layout_height="@dimen/dim20dp"
            android:layout_below="@+id/tvRecoTitle"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/dim10dp"
            android:layout_marginTop="@dimen/dim15dp"
            android:src="@drawable/demo_image" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvExplorePersonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvRecoTitle"
            android:layout_marginStart="@dimen/dim10dp"
            android:layout_marginTop="@dimen/dim15dp"
            android:layout_toEndOf="@+id/ivRecoAvatar"
            android:text="Jimmy Abrahamson"
            android:fontFamily="@font/rubik"
            android:textColor="@color/light_blue_black"
            android:textSize="@dimen/dim12sp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/heart"
            android:layout_width="@dimen/dim20dp"
            android:layout_height="@dimen/dim20dp"
            android:layout_below="@+id/tvRecoTitle"
            android:layout_marginTop="@dimen/dim20dp"
            android:layout_toStartOf="@+id/space"
            android:src="@drawable/shape_heart" />

        <View
            android:id="@+id/space"
            android:layout_width="@dimen/dim10dp"
            android:layout_height="@dimen/dim10dp"
            android:layout_below="@+id/tvRecoTitle"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dim20dp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
